
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var slides = (List<Model.EF.Slide>)ViewBag.Slide;
    var listNewProduct = (List<Model.EF.Product>)ViewBag.NewProducts;
    var listFeatureProduct = (List<Model.EF.Product>)ViewBag.FeatureProducts;
}
@section slide{
    <div class="header_slide">
        <div class="header_bottom_left">
            @{ Html.RenderAction("ProductCategory", "Product"); }
        </div>
        <div class="header_bottom_right">
            <div class="slider">
                <div id="slider">
                    <div id="mover">
                        @foreach (var item in slides)
                        {
                            <div id="@(item.DisplayOrder == 1 ? "slide-1" : null)" class="slide">
                                <div class="slider-text">
                                    <h1>Clearance<br><span>SALE</span></h1>
                                    <h2>UPTo 40% OFF</h2>
                                    <div class="features_list">
                                        <h4>Get to Know More About Our Memorable Services</h4>
                                    </div>
                                    <a href="preview.html" class="button">Shop Now</a>
                                </div>
                                <div class="slider-img">
                                    <a href="@item.Link"><img src="@item.Image" alt="learn more" /></a>
                                </div>
                                <div class="clear"></div>
                            </div>
                            
                        }

                    </div>
                <div class="clear"></div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
}
<div class="main">
    <div class="content">
        <div class="content_top">
            <div class="heading">
                <h3>New Products</h3>
            </div>
            <div class="see">
                <p><a href="/san-pham">See all Products</a></p>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group">
            @foreach (var item in listNewProduct)
            {
                var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
                <div class="grid_1_of_4 images_1_of_4">
                    <a href="@url"><img src="@item.Image" alt="" /></a>
                    <h2>@item.Name</h2>
                    <div class="price-details">
                        <div class="price-number">
                            @if (item.PromotionPrice != null)
                            {
                                <p><strike class="rupees">@item.Price.Value.ToString("N0")</strike></p>
                                <p><span class="rupees">@item.PromotionPrice.Value.ToString("N0")</span></p>

                            }
                            else
                            {

                                <p><span class="rupees">@item.PromotionPrice.Value.ToString("N0")</span></p>
                            }
                        </div>
                        <div class="add-cart">
                            <h4><a href="@url">Add to Cart</a></h4>
                        </div>
                        <div class="clear"></div>
                    </div>

                </div>
            }

        </div>
        <div class="content_bottom">
            <div class="heading">
                <h3>Sale Products</h3>
            </div>
            <div class="see">
                <p><a href="/san-pham">See all Products</a></p>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group">
            @foreach (var item in listFeatureProduct)
            {
                var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
                <div class="grid_1_of_4 images_1_of_4">
                    <a href="@url"><img src="@item.Image" alt="" /></a>
                    <h2>@item.Name</h2>
                    <div class="price-details">
                        <div class="price-number">
                            @if (item.PromotionPrice != null)
                            {
                                <p><strike class="rupees">@item.Price.Value.ToString("N0")</strike></p>
                                <p><span class="rupees">@item.PromotionPrice.Value.ToString("N0")</span></p>

                            }
                            else
                            {

                                <p><span class="rupees">@item.PromotionPrice.Value.ToString("N0")</span></p>
                            }
                        </div>
                        <div class="add-cart">
                            <h4><a href="@url">Add to Cart</a></h4>
                        </div>
                        <div class="clear"></div>
                    </div>

                </div>
            }

        </div>
    </div>
</div>

